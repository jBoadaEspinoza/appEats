<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gris_humo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtCantidadOrdenResumen"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_marginLeft="5dp"
            android:text="1x" />
        <TextView
            android:id="@+id/txtDescripcionOrdenResumen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="Pollo a la brasa entero" />

        <TextView
            android:id="@+id/txtImporteOrdenResumen"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="S/.60.00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnQuitarArticuloOrdenesResumen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/button_round_add_quit"
            android:text="-"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnAgregarArticuloOrdenesResumen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/button_round_add_quit"
            android:text="+"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>